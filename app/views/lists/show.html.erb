<div class="container">
  <div class="buttons pb-4">
  <h1>This is your <%= @list.name %> List </h1>
      <%= link_to 'Back', lists_path, class: 'btn btn-primary' %>
      <%= link_to 'Add a new movie', new_list_bookmark_path(@list), class: 'btn btn-warning' %>
      <%= link_to 'Delete this list', list_path(@list), method: :delete, data: {confirm: " Are you sure you want to delete #{@list.name} ?"}, class: 'btn btn-danger' %>
  </div>
</div>

<div class="container">
  <div class="row">
  <% @list.movies.each do |movie| %>
  <div class="card m-3" style="width: 18rem;">
<%= image_tag movie.poster_url, alt: movie.title, class: 'movie-img rounded-top' %>
  <div class="card-body">
    <h5 class="card-title"><%= movie.title %></h5>
    <p class="card-text"><%= movie.overview %></p>
  </div>
  <ul class="list-group list-group-flush">
  <% @list.bookmarks.each do |bookmark| %>
    <li class="list-group-item"><%= bookmark.comment %></li>
  </ul>
  <div class="card-body">
      <%= link_to 'Delete this movie', list_path(@list.bookmarks), method: :delete, data: {confirm: " Are you sure you want to delete #{movie.title} ?"}, class: 'btn btn-danger' %>
  </div>
</div>
<% end %>
  </div>
<% end %>
</div>
